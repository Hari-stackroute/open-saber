{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Teacher": {
      "$ref": "#/definitions/Teacher"
    }
  },
  "required": [
    "Teacher"
  ],
  "title":"Teacher",
  "definitions": {
    "Teacher": {
      "$id": "#/properties/Teacher",
      "type": "object",
      "title": "The Teacher Schema",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "signatures": {
          "$id": "#/properties/signatures",
          "type": "array",
          "items": {
            "$ref": "Signature.json#/definitions/Signature"
          },
          "$comment": "Placeholder for all verifiable claims"
        },
        "id": {
          "$id": "#/properties/serialNum",
          "type": "string",
          "$comment": "Diksha id"
        },
        "teacherName": {
          "$id": "#/properties/teacherName",
          "type": "string",
          "title": "Full name"
        },
        "passAverage": {
          "$id": "#/properties/passAverage",
          "type": "integer",
          "title": "Percentage pass average"
        },
        "nContentsCreated": {
          "$id": "#/properties/nContentsCreated",
          "type": "integer",
          "title": "Count of contents created"
        },
        "nConsumed": {
          "$id": "#/properties/nConsumed",
          "type": "integer",
          "title": "Cumulative sum of contents created consumed by students"
        },
        "district": {
          "$id": "#/properties/district",
          "type": "string",
          "title": "District name"
        },
        "schoolName": {
          "$id": "#/properties/schoolName",
          "type": "string",
          "title": "Name of the school currently working"
        },
        "subjectsTaught": {
          "$id": "#/properties/subjectsTaught",
          "type": "array",
          "title": "Subjects taught"
        }
      }
    }
  },
  "_osConfig": {
         "osComment": ["This section contains the OpenSABER specific configuration information", 
                      "privateFields: Optional; list of field names to be encrypted and stored in database", 
                      "signedFields: Optional; list of field names that must be pre-signed"],                     
         "privateFields": [],
         "signedFields": [],
         "indexFields": [],
         "uniqueIndexFields": []
  }
}