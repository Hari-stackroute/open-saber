{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Visitor": {
      "$ref": "#/definitions/Visitor"
    }
  },
  "required": [
    "Visitor"
  ],
  "title":"Visitor",
  "_osConfig": {
    "osComment": [],
    "privateFields": [],
    "signedFields": []
  },
  "definitions": {
    "Visitor": {
      "$id": "#/properties/visitor",
      "type": "object",
      "title": "The visitor Schema",
      "required": [
        "name"
      ],
      "optional": [
        "signatures",
        "org",
        "coinsSpent",
        "coinsGiven",
        "votes"
      ],
      "properties": {
        "signatures": {
          "$id": "#/properties/signatures",
          "type": "array",
          "items": {
            "$ref": "Signature.json#/definitions/Signature"
          },
          "$comment": "Placeholder for all verifiable claims"
        },
        "votes": {
          "$id": "#/properties/votes",
          "type": "array",
          "items": {
            "$ref": "Vote.json#/definitions/Vote"
          },
          "$comment": "Placeholder for all votes this visitor put"
        },
        "org": {
          "$id": "#/properties/org",
          "type": "string",
          "$comment": "Org name"
        },
        "name": {
          "$id": "#/properties/name",
          "type": "string",
          "title": "Full name"
        },
        "coinsGiven": {
          "$id": "#/properties/coinsGiven",
          "type": "integer",
          "$comment": "Coins given to this visitor"
        },
        "coinsSpent": {
          "$id": "#/properties/coinsSpent",
          "type": "integer",
          "$comment": "Coins spent by this visitor"
        }
      }
    }
  }
}
