{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Stall": {
      "$ref": "#/definitions/Stall"
    }
  },
  "required": [
    "Stall"
  ],
  "title":"Stall",
  "_osConfig": {
    "osComment": [],
    "privateFields": [],
    "signedFields": []
  },
  "definitions": {
    "Stall": {
      "$id": "#/properties/stall",
      "type": "object",
      "title": "The stall Schema",
      "required": [
        "name",
        "id",
        "ideas"
      ],
      "properties": {
        "id": {
          "$id": "#/properties/id",
          "type": "integer",
          "$comment": "Stall identifier - please use these ids only against your stall",
          "examples": [
            "1 - Creation",
            "2 - ClassRoom",
            "3 - StaffRoom",
            "4 - AdminOffice",
            "5 - NOC",
            "6 - Bazaar"
          ]
        },
        "name": {
          "$id": "#/properties/name",
          "type": "string",
          "enum": [
            "Creation",
            "ClassRoom",
            "StaffRoom",
            "AdminOffice",
            "NOC",
            "Bazaar"
          ],
          "title": "Stall name"
        },
        "ideas": {
          "$id": "#/properties/ideaCode",
          "type": "array",
          "items": {
            "$ref": "Idea.json#/definitions/Idea"
          }
        }
      }
    }
  }
}
